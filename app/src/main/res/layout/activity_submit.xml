<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".view.activity.SubmitActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:scaleType="centerCrop"/>


        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marging_top_main"
            android:layout_marginLeft="@dimen/marging_top_main"
            android:layout_toRightOf="@id/back_button"
            layout="@layout/include_toolbar"/>

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/marging_top_submit"
        android:layout_gravity="center">

            <RelativeLayout
                android:id="@+id/mFirstNameContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/appbar_padding">

                <EditText
                    android:id="@+id/mFirstName"
                    android:layout_width="@dimen/width_input"
                    android:layout_height="@dimen/height_text_input"
                    android:background="@drawable/shape_input"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/marging_top_main"
                    android:hint="FIRST NAME"/>

                <EditText
                    android:id="@+id/mLastName"
                    android:layout_width="@dimen/width_input"
                    android:layout_height="@dimen/height_text_input"
                    android:background="@drawable/shape_input"
                    android:layout_alignParentRight="true"
                    android:hint="LAST NAME"/>
            </RelativeLayout>


        <EditText
            android:id="@+id/mEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text_input"
            android:background="@drawable/shape_input"
            android:layout_marginTop="@dimen/marging_top_input"
            android:layout_marginRight="@dimen/marging_right_input"
            android:hint="Email"/>

        <EditText
            android:id="@+id/mGithubProjetLink"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text_input"
            android:background="@drawable/shape_input"
            android:layout_marginRight="@dimen/marging_right_input"
            android:layout_marginTop="@dimen/marging_top_input"
            android:hint="Github Projet Link"/>


        <Button
            android:id="@+id/mSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_submit"
            android:layout_marginTop="@dimen/marging_top_input"
            android:layout_marginLeft="@dimen/margin_left_button"
            android:text="@string/submit"
            android:paddingLeft="@dimen/nom_text_size"
            android:paddingRight="@dimen/nom_text_size"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>
</LinearLayout>