<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        app:cardCornerRadius="@dimen/cardview_radius"
        app:cardElevation="@dimen/cardview_elevation"
        app:cardMaxElevation="@dimen/cardview_max_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ProgressBar
                android:id="@+id/prograss_load_photo"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/mImageBadge"
                android:layout_width="90dp"
                android:layout_height="96dp"
                tools:ignore="UnusedAttribute"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/mTextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/marging_top_main">

                <TextView
                    android:id="@+id/mNom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Lionel Sachat NKEOUA MBEMBA"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/nom_text_size"/>

                <LinearLayout
                    android:id="@+id/mTextContent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/marging_top_main">

                    <TextView
                        android:id="@+id/mVariable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/nom_text_size"
                        android:textStyle="normal"
                        android:text="0"/>

                    <TextView
                        android:id="@+id/mCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/nom_text_size"
                        android:textStyle="normal"
                        android:text="Republic of Congo"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>